<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="it.polimi.dima.effectivenavigation.RegistrationActivity" >

    <!-- Login progress -->

    <ProgressBar
        android:id="@+id/registration_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/registration_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient" >

            <!-- Registration Form -->

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dip" >

                <!-- Email Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:text="Email"
                    android:textColor="#45a700"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/rect_text_edit"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="5dip"
                    android:singleLine="true" />

                <!-- UserName Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:text="Username"
                    android:textColor="#45a700"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/rect_text_edit"
                    android:hint="@string/prompt_username"
                    android:maxLines="1"
                    android:padding="5dip"
                    android:singleLine="true" />

                <!-- Faculty Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:text="Faculty"
                    android:textColor="@color/Green"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/faculty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/rect_text_edit"
                    android:focusableInTouchMode="false"
                    android:hint="@string/prompt_faculty"
                    android:maxLines="1"
                    android:padding="5dip"
                    android:singleLine="true" />

                <!-- Datebirth Label -->

				 <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:text="Birthdate"
                    android:textColor="@color/Green"
                    android:textStyle="bold" />
				
                <EditText
                    android:id="@+id/dateBirth"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/rect_text_edit"
                    android:focusableInTouchMode="false"
                    android:hint="@string/prompt_birthdate"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="5dip"
                    android:singleLine="true" 
                    android:focusable="false">

                    <requestFocus />
                </EditText>

                <!-- Password Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:text="Password"
                    android:textColor="#45a700"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/rect_text_edit"
                    android:hint="@string/prompt_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="5dip"
                    android:password="true"
                    android:singleLine="true" />

                <!-- Confirm password Label -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:text="Confirm password"
                    android:textColor="#45a700"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="60dip"
                    android:layout_marginRight="60dip"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/rect_text_edit"
                    android:hint="@string/prompt_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="5dip"
                    android:password="true"
                    android:singleLine="true" />

                <!-- Registration button -->

                <Button
                    android:id="@+id/registration_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3sp"
                    android:background="@drawable/styled_button"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="Register!"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- Registration Form Ends -->

        </RelativeLayout>
    </ScrollView>

</LinearLayout>