<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/shadow_panel"
    android:baselineAligned="true" >

    <RelativeLayout
        android:id="@+id/search_field_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="75" >

        <EditText
            android:id="@+id/book_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/rect_text_edit_book_search_panel"
            android:hint="@string/book_title_hint"
            android:maxLength="30"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="5dip"
            android:textColorHint="@color/timestamp" />

        <EditText
            android:id="@+id/book_author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_title"
            android:layout_margin="7dp"
            android:background="@drawable/rect_text_edit_book_search_panel"
            android:hint="@string/book_authors_hint2"
            android:maxLength="30"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="5dip"
            android:textColorHint="@color/timestamp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_button_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25" >

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_action_search"
            android:background="@null" />
    </RelativeLayout>

</LinearLayout>