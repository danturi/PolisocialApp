<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1px" android:color="@color/timestamp" />

            <solid android:color="@color/post_button_pressed" />

            <corners android:radius="5dp" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1px" android:color="@color/timestamp" />

            <solid android:color="@color/post_button_background" />

            <corners android:bottomRightRadius="4dp" android:topRightRadius="4dp" />
        </shape></item>

</selector>